---
import MainLayout from '../layouts/Layout.astro';
import portfolioData from '../data/portfolio.json';
const { personal, navigation } = portfolioData;
---

<MainLayout title="404 - Page Not Found">
  <section
    class="min-h-screen flex flex-col items-center justify-center text-center px-8 py-16 md:py-0">
    <div class="max-w-xl mx-auto flex-grow flex flex-col justify-center mb-16">
      <h1
        class="text-8xl md:text-9xl font-light mb-4 text-gray-900 tracking-tighter animate-fade-in">
        404
      </h1>

      <p
        class="text-lg md:text-xl text-gray-700 mb-12 leading-relaxed animate-fade-in"
        style="animation-delay: 200ms;">
        Oops! The page you're looking for doesn't exist.
      </p>
    </div>

    <div
      class="flex flex-col gap-6 justify-center mb-16 animate-fade-in"
      style="animation-delay: 400ms;">
      <a
        href="/"
        class="group relative text-sm tracking-widest border-b border-gray-300 pb-2 hover:border-gray-900 transition-all duration-500">
        <span class="relative z-10">Go to Homepage</span>
        <span
          class="absolute bottom-0 left-0 w-0 h-px bg-gray-900 transition-all duration-500 group-hover:w-full"
        ></span>
      </a>
      <a
        href="/#work"
        class="text-sm tracking-widest text-gray-500 hover:text-gray-900 transition-colors duration-500">
        View Projects
      </a>
      <a
        href="/#contact"
        class="text-sm tracking-widest text-gray-500 hover:text-gray-900 transition-colors duration-500">
        Contact Me
      </a>
    </div>
  </section>
</MainLayout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
    opacity: 0;
  }
</style>
