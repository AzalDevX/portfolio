---
const res = await fetch('https://devflow.azaldev.com/api/posts.json');
const data = await res.json();
const posts = data.latestPosts.slice(0, 3); // Solo los 3 últimos posts
---

<section class="latest-posts">
  <div class="px-12">
    <h2 class="section-title fade-in">Últimos Posts</h2>
    <div class="posts-grid">
      {
        posts.map((post) => (
          <a
            href={`https://devflow.azaldev.com/blog/${post.slug}`}
            target="_blank"
            class="post-card fade-in">
            <div class="post-content">
              <span class="post-category">{post.data.category}</span>
              <h3 class="post-title">{post.data.title}</h3>
              <p class="post-description">{post.data.description}</p>
              <span class="post-date">
                {new Date(post.data.publishDate).toLocaleDateString('es-ES', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </span>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>

<style>
  .latest-posts {
    padding: 6rem 0;
    text-align: center;
  }

  .section-title {
    font-size: 2rem;
    margin-bottom: 3rem;
    font-weight: 300;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .post-card {
    display: block;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #f0f0f0;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
    transition:
      background-color 0.3s ease,
      color 0.3s ease;
    padding: 1rem 0.5rem;
  }

  .post-card:last-child {
    border-bottom: none;
  }

  .post-card:hover {
    background-color: #f5f5f5; /* sutil, solo cambia fondo */
  }

  .post-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .post-category {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: #999;
    letter-spacing: 0.05em;
  }

  .post-title {
    font-size: 1.1rem;
    color: #000;
    transition: color 0.3s ease;
  }

  .post-card:hover .post-title {
    color: #333;
  }

  .post-description {
    color: #333;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .post-date {
    color: #666;
    font-size: 0.8rem;
  }

  /* Animación fade-in igual que Hero y Work */
  .fade-in {
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.6s ease,
      transform 0.6s ease;
  }

  .fade-in.visible {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .posts-grid {
      gap: 1.5rem;
    }
  }
</style>

<script>
  // Animación de fade-in igual que tu Hero
  setTimeout(() => {
    document.querySelectorAll('.latest-posts .fade-in').forEach((el, index) => {
      setTimeout(() => el.classList.add('visible'), index * 200);
    });
  }, 300);
</script>
