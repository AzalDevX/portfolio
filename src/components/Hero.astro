---
import portfolioData from '../data/portfolio.json';
const { personal } = portfolioData;
---

<section class="hero">
  <div class="container">
    <h1 class="hero-name fade-in">{personal.name}</h1>
    <div class="hero-title fade-in">{personal.title}</div>
    <div class="hero-location fade-in">{personal.location}</div>
    <p class="hero-tagline fade-in">{personal.tagline}</p>
    <div class="hero-actions fade-in">
      <a href="#work" class="btn btn-primary">Ver Proyectos</a>
      <a href="#contact" class="btn">Cont√°ctame</a>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 8rem 0;
  }

  .hero-name {
    font-size: 4rem;
    font-weight: 300;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
  }

  .hero-title {
    color: #666;
    margin-bottom: 1rem;
    font-size: 0.9em;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .hero-location {
    color: #999;
    margin-bottom: 4rem;
    font-size: 0.8em;
  }

  .hero-tagline {
    max-width: 600px;
    margin: 0 auto 4rem;
    color: #333;
    font-size: 1.1em;
  }

  .hero-actions {
    display: flex;
    gap: 3rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    background: none;
    border: none;
    font-family: var(--mono);
    font-size: 0.9em;
    color: #666;
    text-decoration: none;
    cursor: pointer;
    transition: color 0.3s ease;
    position: relative;
  }

  .btn:hover {
    color: #000;
  }

  .btn-primary {
    color: #000;
    border-bottom: 1px solid #000;
    padding-bottom: 0.2rem;
  }

  @media (max-width: 768px) {
    .hero-name {
      font-size: 2.5rem;
    }

    .hero-actions {
      flex-direction: column;
      gap: 1.5rem;
    }
  }
</style>

<script>
  setTimeout(() => {
    document.querySelectorAll('.hero .fade-in').forEach((el, index) => {
      setTimeout(() => {
        el.classList.add('visible');
      }, index * 200);
    });
  }, 300);
</script>
