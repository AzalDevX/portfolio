---
import portfolioData from '../data/portfolio.json';
const { work } = portfolioData;

const createSlug = (title) => {
  return title
    .toLowerCase()
    .replace(/[^a-z0-9]+/g, '-')
    .replace(/^-+|-+$/g, '');
};
---

<section id="work" class="section bg-alt">
  <div class="container">
    <div class="section-grid">
      <h2 class="section-title">{work.title}</h2>
      <div class="section-content">
        {
          work.projects.map((project) => (
            <a
              href={`/work/${createSlug(project.title)}`}
              class="project fade-in">
              <div class="project-header">
                <h3 class="project-title">{project.title}</h3>
                <span class="project-year">{project.year}</span>
              </div>
              <p class="project-description">{project.description}</p>
              <div class="project-tech">{project.technologies}</div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .project {
    display: block;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #f0f0f0;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
    transition:
      background-color 0.3s ease,
      color 0.3s ease;
    padding: 1rem 0.5rem;
  }

  .project:last-child {
    border-bottom: none;
  }

  .project:hover {
    background-color: #f5f5f5;
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 1rem;
  }

  .project-title {
    font-size: 1.1em;
    color: #000;
    transition: color 0.3s ease;
  }

  .project:hover .project-title {
    color: #333;
  }

  .project-year {
    color: #999;
    font-size: 0.8em;
  }

  .project-description {
    color: #333;
    margin-bottom: 1rem;
  }

  .project-tech {
    color: #666;
    font-size: 0.8em;
  }

  @media (max-width: 768px) {
    .project-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
