---
import portfolioData from '../data/portfolio.json';
const { philosophy } = portfolioData;
---

<section class="section bg-alt">
    <div class="container">
        <div class="section-grid">
            <h2 class="section-title">{philosophy.title}</h2>
            <div class="section-content">
                {philosophy.values.map(value => (
                    <div class="value fade-in">
                        <h3 class="value-title">{value.title}</h3>
                        <p class="value-tagline">{value.tagline}</p>
                        <p class="value-description">{value.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>

<style>
    .value {
        margin-bottom: 4rem; 
        padding-top: 2rem; 
        border-top: 1px solid #e0e0e0; 
    }
    
    .value:first-child {
        border-top: none; 
        padding-top: 0; 
    }

    .value-title {
        color: #000;
        font-size: 1.2em; 
        font-weight: 500; 
        margin-bottom: 0.8rem;
    }

    .value-tagline {
        color: #666;
        font-size: 0.95em; 
        margin-bottom: 1.5rem; 
        font-weight: 400;
    }
    
    .value-description {
        color: #333;
        font-size: 0.9em; 
        line-height: 1.6em; 
    }
</style>
