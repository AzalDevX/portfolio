---
import portfolioData from '../data/portfolio.json';
const { experience } = portfolioData;
---

<section id="experience" class="section">
  <div class="container">
    <div class="section-grid">
      <h2 class="section-title">{experience.title}</h2>
      <div class="section-content">
        {
          experience.positions.map((position) => (
            <div class="experience-item fade-in">
              <div class="experience-header">
                <h3 class="experience-title">{position.title}</h3>
                <span class="experience-period">{position.period}</span>
              </div>
              <div class="experience-company">{position.company}</div>
              <p class="experience-description">{position.description}</p>
              <div class="experience-tech">{position.technologies}</div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .experience-item {
    margin-bottom: 3rem;
  }

  .experience-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 0.5rem;
  }

  .experience-title {
    color: #000;
    font-size: 1.1em;
  }

  .experience-company {
    color: #666;
    margin-bottom: 1rem;
  }

  .experience-period {
    color: #999;
    font-size: 0.8em;
  }

  .experience-description {
    color: #333;
    margin-bottom: 1rem;
  }

  .experience-tech {
    color: #666;
    font-size: 0.8em;
  }

  @media (max-width: 768px) {
    .experience-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
